<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
    <title>DEI Issue Tracking</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<div id="app">
    <v-app>
        <v-content>
            <v-container fluid fill-height>
                <v-layout align-center justify-center>
                    <v-flex xs12 sm8 md4>
                        <v-card class="elevation-12">
                            <v-toolbar dark color="primary">
                                <v-toolbar-title>Login form</v-toolbar-title>
                                <v-spacer></v-spacer>
                                <v-tooltip bottom>
                                    <template v-slot:activator="{ on }">
                                        <v-btn href="{{ path('default') }}" icon large v-on="on"><v-icon large>mdi-home</v-icon></v-btn>
                                    </template>
                                    <span>Poƒçetna</span>
                                </v-tooltip>
                            </v-toolbar>
                            <v-form method="post">
                                <v-card-text>
                                    {% if error %}
                                        <v-alert :value="true" type="error">{{ error.messageKey|trans(error.messageData, 'security') }}</v-alert>
                                    {% endif %}
                                        <v-text-field prepend-icon="person" name="email" id="inputEmail" label="Email" type="email"></v-text-field>
                                        <v-text-field id="inputPassword" prepend-icon="lock" name="password" label="Password" type="password"></v-text-field>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </v-card-text>
                                <v-card-actions>
                                    <v-spacer></v-spacer>
                                    <v-btn color="primary" type="submit">Login</v-btn>
                                </v-card-actions>
                            </v-form>
                        </v-card>
                    </v-flex>
                </v-layout>
            </v-container>
        </v-content>
    </v-app>
</div>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>

